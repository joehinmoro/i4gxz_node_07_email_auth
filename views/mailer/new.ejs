<%- include("partials/head") %>
<main class="form-signin w-100 m-auto text-center">
    <form method="post" action="/mailer">
        <h1 class="h3 mb-3 fw-normal">Send Email</h1>

        <div class="form-floating">
            <input
                type="email"
                class="form-control text-center text-muted"
                id="floatingInput"
                placeholder="joehinmoro@gmail.com"
                name="from"
                value="joehinmoro@gmail.com"
                disabled
            />
            <label for="floatingInput">From:</label>
        </div>
        <div class="form-floating">
            <input
                type="email"
                class="form-control"
                id="floatingInput"
                placeholder="name@example.com"
                name="to"
                required
            />
            <label for="floatingInput">To:</label>
        </div>
        <div class="form-floating">
            <input
                type="text"
                class="form-control"
                id="floatingInput"
                placeholder="subject"
                name="subject"
            />
            <label for="floatingInput">Subject:</label>
        </div>
        <div class="form-floating">
            <textarea
                type="textarea"
                class="form-control"
                style="height: 200px"
                id="floatingtext"
                placeholder="text"
                name="text"
                required
            ></textarea>
            <label for="floatingtext">Text:</label>
        </div>
        <button class="w-100 btn btn-lg btn-primary mt-3" type="submit">Send Email</button>
    </form>
</main>
<%- include("partials/foot") %>
